@model LibraryManagementWebApplication.Models.Admin
@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Admin</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAdmin" oninput='Password2.setCustomValidity(Password2.value != Password.value ? "Passwords do not match." : "")'>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!$%^&*_=+-]).{8,}" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Confirm Password</label>
                <input name="Password2" type="password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p class="text-danger font-weight-bold">Password must container the following:</p>
<ul class="text-danger">
    <li>
        At least 8 characters
    </li>
    <li>
        Uppercase characters (A-Z)
    </li>
    <li>
        Lowercase characters (a-z)
    </li>
    <li>
        Digits (0-9)
    </li>
    <li>
        @Html.Raw("Special characters (~!@#$%^&*_-+=`|\\(){}\"[]:;'<>,.?/)")
    </li>
</ul>

