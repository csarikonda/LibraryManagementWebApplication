@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mt-200 w-80p">
    <div class="row row-bg-slider">
        <div class="d-flex align-items-center col-md-5">
            <div class="text-center valignc slider-text">
                <h1 class="display-4">Welcome</h1>
                <h3>@HttpContextAccessor.HttpContext.Session.GetString("email")</h3>
                <h5>To The Library of UWorld</h5>
                <h4>A Neutral and Trusted space for public use</h4>
                <a href="https://localhost:44319/Books/GetListofBooks" class="btn btn-primary">GET STARTED</a>
                <ul class="uk-pagination" data-uk-pagination="{items:100, itemsOnPage:40}"></ul>
            </div>
        </div>
        <div class="col-md-7 slider-imgs">
            <div class="carousel slide" data-ride="carousel" style=" height: 500px; ">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 h-400" src="~/img/slide-1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-400" src="~/img/slide-6.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-400" src="~/img/slide-4.jpg" alt="Second slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>